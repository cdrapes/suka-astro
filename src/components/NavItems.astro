---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.replace(/\//g, "");
---

<a class={currentPath.length === 0 ? "active" : ""} href="/">HOME</a>
<a class={currentPath === "herbal" ? "active" : ""} href="/herbal"
  >HERBAL MEDICINE</a
>
<a class={currentPath === "reiki" ? "active" : ""} href="/reiki">REIKI</a>
<a class={currentPath === "shaman" ? "active" : ""} href="/shaman"
  >SHAMANIC HEALING</a
>
<a class={currentPath === "community" ? "active" : ""} href="/community"
  >COMMUNITY</a
>

<style>
  a {
    padding: 0.5em;
    /* color: #077D3A; */
    color: #077d3a;

    transition: 0.3s color;
    text-decoration: none;
  }
  a:hover {
    /* color: #0a4a25; */
    color: #fecb00;
  }

  .active {
    color: #fecb00;
    text-decoration: underline;
    text-underline-offset: 5px;
    font-weight: bold;
  }
</style>
