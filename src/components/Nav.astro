---
import { Debug } from "astro/components";
import NavItems from "./NavItems.astro";
---

<nav class="navbar">
  <ul class="navbar__items">
    <NavItems />
  </ul>
  <!-- <Debug answer={currentPath} /> -->
</nav>
<style>
  @media screen and (max-width: 767px) {
    nav {
      display: none;
    }
  }

  nav {
    text-transform: uppercase;
    font-size: 12px;
    text-align: center;
    margin: auto;
  }

  ul {
    padding: 0;
    list-style-type: none;
    display: flex;
  }

  /* mobile nav */

  .mobileNav {
    display: flex;
    justify-content: center;
    display: block;
    margin: 0;
  }
</style>
