<style>
  nav {
    margin: auto;
    width: fit-content;
    font-family: "Fahkwang", sans-serif;
    text-transform: uppercase;
    font-size: 12px;
    text-align: center;
  }

  ul {
    padding: 0;
    list-style-type: none;
    display: flex;
  }

  a {
    padding: 0.5em;
    /* color: #077D3A; */
    color: #077d3a;

    transition: 0.3s;
    text-decoration: none;

  }

  a:hover {
    /* color: #0a4a25; */
    color: #fecb00;
  }

  .active {
    color: #fecb00;
    text-decoration: underline;
    text-underline-offset: 5px;
    font-weight: bold;

  }

  /* mobile nav */

  .mobileNav {
    display: flex;
    justify-content: center;
    /* margin: 1em auto 0; */
    display: block;
    margin: 0;
  }
</style>
