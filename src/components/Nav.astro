  <ul class="navbar__items">
    <!-- <li class="navbar_item"> -->
      <a class={currentPath === "" ? "active" : ""} href="/">HOME</a>
    <!-- </li> -->
    <!-- <li class="navbar_item"> -->
      <a class={currentPath === "herbal" ? "active" : ""} href="/herbal"
        >HERBAL MEDICINE</a
      >
