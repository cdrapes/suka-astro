---
export interface Props {
	text: string;
  page: string;
}

const { page, text } = Astro.props;
---

<div class="banner">
    <div>
      <span
        class={`banner banner--${page}`}
        role="img"
        aria-label={`[${page} banner]`}
      ></span>
    </div>
    <div class="banner__text">
      <h1>{text}</h1>
    </div>
  </div>

<style>
.banner {
  position: relative;
}

.banner__text {
  /* position: absolute; */
  font-style: italic;
  color: white;
  display: flex;
  justify-content: center;
  height: 100%;
  width: 100%;
  align-items: center;
  top: 0;
  text-align: center;
  font-size: 20px;
}

.banner__text > h2 {
  width: 70%;
}

@media screen and (max-width: 767px) {
  .bannerText {
    font-size: 18px;
  }
}

</style>