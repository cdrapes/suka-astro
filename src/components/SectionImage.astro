---
import { Image } from '@astrojs/image/components';
export interface SectionImage {
  src: string;
  alt: string;
  size?: "small" | "medium" | "large";
  height?: number;
  width?: number;
}

const { src, alt, height, width, size } = Astro.props;
---

<div class={`section__image-wrapper`}>
  <Image
    class={`section__image ${size ? `section__image--${size}` : ""}`}
    src={src}
    alt={alt}
    height={height}
    width={width}
  />
</div>

<style>
  .section__image-wrapper {
    margin: 1em;
    overflow: hidden;
    border-radius: 24px;
  }

  .section__image {
    margin: auto;
    width: 100%;
    height: 100%;
    max-width: 250px;
    max-height: 250px;
    border-radius: 24px;
  }

  .section__image--large {
    max-width: 450px;
    max-height: 400px;
  }
</style>
